{
  "name": "thisishugo.com",
  "version": "3.0.0",
  "description": "Hugo Jobling's Website",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "remix dev",
    "build": "remix build",
    "start": "remix-serve build/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "eslint": "eslint .",
    "eslint:fix": "npm run eslint -- --fix",
    "postcss:build": "postcss styles/index.css -o app/styles/index.css",
    "postcss:build:watch": "npm run postcss:build -- --watch",
    "prettier": "prettier '**/*.{ts,tsx,js,json,css,md,html,yml}'",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --check",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=24",
    "npm": ">=11"
  },
  "dependencies": {
    "@remix-run/node": "^2.17.2",
    "@remix-run/react": "^2.17.2",
    "@remix-run/serve": "^2.17.2",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-router": "^7.9.4",
    "react-router-dom": "^7.10.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@remix-run/dev": "^2.17.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^29.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "overrides": {
    "@remix-run/react": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hugo/thisishugo.com.git"
  },
  "keywords": [
    "hugo",
    "jobling",
    "hugo jobling",
    "thisishugo.com"
  ],
  "author": "Hugo Jobling <hello@thisishugo.com> (https://thisishugo.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hugo/thisishugo/issues"
  },
  "homepage": "https://github.com/hugo/thisishugo.com"
}
