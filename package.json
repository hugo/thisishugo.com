  "description": "Hugo Jobling's Website",
  "main": "index.html",
  "scripts": {
    "dev": "pm2-dev pm2.config.js",
    "prebuild": "npm run postcss:build -- --env production",
    "build": "remix build",
    "start": "remix-serve build",
    "test": "jest",
