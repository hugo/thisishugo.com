{
  "name": "thisishugo.com",
  "version": "3.0.0",
  "description": "Hugo Jobling's Website",
  "main": "index.html",
  "scripts": {
    "postinstall": "remix setup",
    "dev": "pm2-dev pm2.config.js",
    "prebuild": "npm run postcss:build -- --env production",
    "build": "remix build",
    "start": "remix-serve build",
    "test": "jest",
    "eslint": "eslint . --ext ts,tsx",
    "eslint:fix": "npm run eslint -- --fix",
    "postcss:build": "postcss styles/index.css -o app/styles/index.css",
    "postcss:build:watch": "npm run postcss:build -- --watch",
    "prettier": "prettier '**/*.{ts,tsx,js,json,css,md,html,yml}'",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --check"
  },
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "dependencies": {
    "@remix-run/dev": "^1.4.1",
    "@remix-run/node": "^1.3.4",
    "@remix-run/react": "^1.4.1",
    "@remix-run/serve": "^1.4.1",
    "react": "^18.0.0",
    "react-dom": "^18.1.0",
    "react-router": "^6.1.1",
    "react-router-dom": "^6.3.0",
    "remix": "^1.4.1"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^1.4.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.29",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.2",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "autoprefixer": "^10.4.5",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^13.2.0",
    "pm2": "^5.2.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hugo/thisishugo.com.git"
  },
  "keywords": [
    "hugo",
    "jobling",
    "hugo jobling",
    "thisishugo.com"
  ],
  "author": "Hugo Jobling <hello@thisishugo.com> (https://thisishugo.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hugo/thisishugo/issues"
  },
  "homepage": "https://github.com/hugo/thisishugo.com"
}
