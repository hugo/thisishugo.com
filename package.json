    "react-dom": "^18.2.0",
    "react-router": "^6.1.1",
    "react-router-dom": "^6.3.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.6.5",
    "@remix-run/eslint-config": "1.6.7",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.2.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.5",
