    "eslint-plugin-prettier": "^4.1.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-junit": "^16.0.0",
    "pm2": "^5.3.0",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
