  "description": "Hugo Jobling's Website",
  "main": "index.html",
  "scripts": {
    "dev": "pm2-dev pm2.config.js",
    "prebuild": "npm run postcss:build -- --env production",
    "build": "remix build",
    "start": "remix-serve build",
    "test": "jest",
    "eslint": "eslint . --ext ts,tsx",
    "eslint:fix": "npm run eslint -- --fix",
    "postcss:build": "postcss styles/index.css -o app/styles/index.css",
    "postcss:build:watch": "npm run postcss:build -- --watch",
    "prettier": "prettier '**/*.{ts,tsx,js,json,css,md,html,yml}'",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --check"
  },
  "engines": {
    "node": "18",
    "npm": "9"
  },
  "dependencies": {
    "@remix-run/node": "1.12.0",
    "@remix-run/react": "1.12.0",
    "@remix-run/serve": "1.12.0",
    "react": "^18.0.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.8.1",
    "react-router-dom": "^6.6.2"
  },
  "devDependencies": {
    "@remix-run/dev": "1.12.0",
    "@remix-run/eslint-config": "1.12.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.52.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.1.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-junit": "^15.0.0",
    "pm2": "^5.2.2",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
